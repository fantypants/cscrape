                   <div class="col-12 col-sm-4">
                      <img class="icon-check m-auto d-flex" src="<%= static_path(@conn, "/images/icons/png/eye-4x.png") %>">
                      <%= domain.relevancy %>
                    </div>
                 </div>
               </a>
              <% end %>
          </ul>
        </div>
    </div>
    </div>

  </div>
</div>

